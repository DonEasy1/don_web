<!--<%= @user.inspect %> experimenting-->
<div class="container text-justify">
  <div class="well">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
      </div>
      <div class="col-md-10">
        <h2><%= @user.profile.first_name %> <%= @user.profile.last_name %></h2>
        <h4><%= @user.profile.role %>
          <br/><%= @user.profile.job_title %>
          <br/><%= @user.profile.current_member_union %>
        </h4>
      </div>
    </div>
    <div class="row">
      <% if current_user.plan_id == 2 %>
        <div class="col-md-2">
            <%= @user.profile.phone_number %><br/>
            <%= @user.profile.contact_email %>
        </div>
        <div class="col-md-10">
            <h4><%= @user.profile.description %></h4>
        </div>
      <% end %>
    </div>
  </div>
</div>