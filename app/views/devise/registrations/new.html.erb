<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <% if params[:plan] == '2' %>
          <h1 class="text-center">Pro Account</h1>
            <p class="text-center">Get Pro for $50/year and get access to the community AND contact info & details.</p>
          <div class="well">
            <%= render "pro_form" %>
        <% else %>
          <h1 class="text-center">Basic Account</h1>
            <p class="text-center">Sign up for free and get basic access to the community.</p>
          <div class="well">
            <%= render "basic_form" %>
        <% end %>
        </div>
      </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>